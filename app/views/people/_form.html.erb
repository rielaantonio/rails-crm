<% form_for(@person) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :first %><br />
    <%= f.text_field :first %>
  </p>
  <p>
    <%= f.label :middle %><br />
    <%= f.text_field :middle %>
  </p>
  <p>
    <%= f.label :last %><br />
    <%= f.text_field :last %>
  </p>
  <p>
    <%= f.label :background %><br />
    <%= f.text_area :background %>
  </p>
  <p>
    <%= f.label :birthdate %><br />
    <%= f.date_select :birthdate, :include_blank => true, 
                      :start_year => 1900, 
                      :end_year => Date.today.year,
                      :order => [:month, :day, :year] %>
  </p>
  <p>
    <%= f.submit "Save" %>
  </p>
<% end %>
